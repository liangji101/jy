<?xml version="1.0" encoding="UTF-8"?>
<configuration>
  <Property name="log.dir" value="/home/q/www/quzilla_front/logs" />
  
  <appender name="ASYNCD" class="ch.qos.logback.core.rolling.RollingFileAppender">
    <Append>true</Append>
    <File>${log.dir}/touch-wise.log</File>
    <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<fileNamePattern>${log.dir}/touch-wise.%d.log</fileNamePattern>
	</rollingPolicy>
	 <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
    	<pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level %logger - %msg%n</pattern>
	</encoder>
  </appender>
  <logger name="com.qunar.quzilla" additivity="false">
		<level value="info" />
		<appender-ref ref="ASYNCD" />
  </logger>
  <root level="info">
    <appender-ref ref="ASYNCD"/>
  </root>
</configuration>