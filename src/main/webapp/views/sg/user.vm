<html>
<head>
    <meta charset="utf-8"/>
    <meta name="viewport"
          content="width=device-width,initial-scale=1,maximum-scale=1,minimum-scale=1,user-scalable=no"/>
    <link rel="stylesheet" href="../../js/jquery.mobile-1.4.5/jquery.mobile-1.4.5.min.css">
    <link rel="stylesheet" href="../../css/app.css">

    <script src="../../js/jquery/dist/jquery.min.js" type="text/javascript"></script>
    <script src="../../js/jquery.mobile-1.4.5/jquery.mobile-1.4.5.min.js" type="text/javascript"></script>
    <script src="../../sg/js/userProfile.js" type="text/javascript"></script>

    <!--for tomcat-->
    <link rel="stylesheet" href="/js/jquery.mobile-1.4.5/jquery.mobile-1.4.5.min.css">
    <link rel="stylesheet" href="/css/app.css">

    <script src="/js/jquery/dist/jquery.min.js" type="text/javascript"></script>
    <script src="/js/jquery.mobile-1.4.5/jquery.mobile-1.4.5.min.js" type="text/javascript"></script>
    <script src="/sg/js/userProfile.js" type="text/javascript"></script>

</head>
<body>

<div id="main" role="page">

    <div id="content" data-role="content" class="ui-content">

        <div class="shop-container">
            <div class="" style="padding-left: 0em;padding-right: 0em">
                #foreach($addr in $address)
                <div>$addr.getAddress()</div>
                <div>$addr.getPhone</div>
                #end
            </div>
            <div class="order-list" style="padding-left: 0em;padding-right: 0em;margin-top: 1em">

                #foreach($order in $orders)

                <div class="order-item" style="margin: 1em;border: solid 1px #808080 ; border-radius: 2px">

                    <div style="display: inline-block;background-color: #EFF0F4; border: solid 1px;width: 98%;padding: 0.8em">
                        <div style="float: left">$order.getCreate_time()</div>
                        <div style="float: right">$order.getStatus4V()</div>
                    </div>

                    <div style="padding: 0.8em">
                        <div>收货地址: $order.getAddress_id()</div>
                        <div>联系电话: $order.getAddress_id()</div>
                    </div>

                    <div style="padding: 0.8em" class="order-snapshots">
                        <input class="order-snapshots-string" type="hidden" value='$order.getSnapshot()'>
                    </div>
                </div>

                #end
            </div>
        </div>
    </div>

</div>
</body>
</html>