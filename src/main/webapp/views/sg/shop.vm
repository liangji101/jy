<html>
<head>
    <meta charset="utf-8"/>
    <meta name="viewport"
          content="width=device-width,initial-scale=1,maximum-scale=1,minimum-scale=1,user-scalable=no"/>
    <link rel="stylesheet" href="../js/bootstrap/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="../js/jquery.mobile-1.4.5/jquery.mobile-1.4.5.min.css">
    <link rel="stylesheet" href="../css/app.css">

    <script src="../js/jquery/dist/jquery.min.js" type="text/javascript"></script>
    <script src="../js/jquery.mobile-1.4.5/jquery.mobile-1.4.5.min.js" type="text/javascript"></script>
    <script src="../js/bootstrap/dist/js/bootstrap.min.js" type="text/javascript"></script>
    <!--<script src="../sg/js/simpleCart.js" type="text/javascript"></script>-->
    <script src="../sg/js/ShoppingCart.js" type="text/javascript"></script>
    <script src="../js/jqm-spinbox.min.js" type="text/javascript"></script>
    <script src="../sg/js/shopAction.js" type="text/javascript"></script>

    <!--for tomcat-->
    <link rel="stylesheet" href="/js/bootstrap/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="/js/jquery.mobile-1.4.5/jquery.mobile-1.4.5.min.css">
    <link rel="stylesheet" href="/css/app.css">

    <script src="/js/jquery/dist/jquery.min.js" type="text/javascript"></script>
    <script src="/js/jquery.mobile-1.4.5/jquery.mobile-1.4.5.min.js" type="text/javascript"></script>
    <script src="/js/bootstrap/dist/js/bootstrap.min.js" type="text/javascript"></script>
    <!--<script src="/sg/js/simpleCart.js" type="text/javascript"></script>-->
    <script src="/sg/js/ShoppingCart.js" type="text/javascript"></script>
    <script src="/js/jqm-spinbox.min.js" type="text/javascript"></script>
    <script src="/sg/js/shopAction.js" type="text/javascript"></script>

</head>
<body>

<div id="main" role="page">
    <div id="content" data-role="content" class="ui-content">
        <div class="searchBar">
            <input type="search" name="search-products" class="searchBar-input" value="" placeholder="搜索商品...">
        </div>

        <div class="content-container shop-container">
            <div class="container-fluid">
                <div class="row" data-role="tabs">
                    <div class="col-xs-3 shop-categray-list-container">
                        <div class="shop-categray-list">
                            <ul data-role="listview" class="ui-listview" role="listbox" style="margin: 0.0em 0.1em;">
                                #foreach($category in $categoryls)
                                <li class="shop-categray" data-theme="c" data-item-id="$category.id">
                                    <a href="#$category.id" data-ajax="false">
                                        <div>$category.name</div>
                                    </a>
                                </li>
                                #end
                            </ul>
                        </div>
                    </div>
                    <div class="col-xs-9" style="padding-left: 0em;padding-right: 0em">
                        <div id="shop-product-list">
                            #foreach($category in $categoryls)
                            <ul style="margin: 0.1em 0.0em;">
                                #foreach($item in $items)
                                <li class="product-item js-product-item" id="$item.id">
                                    <input type="hidden" class="js-product-item-id" value="$item.id" data-value="$item.id"/>
                                    <img src="$item.pic_url" style="width: 20px">
                                    #set($item.price = $item.price/100)
                                    <div class="item_name oneline js-product-item-name" data-value="$item.name">$item.name</div>
                                    <div>
                                        <div class="item_price js-product-item-price" data-value="$item.price">$item.price 元
                                        </div>
                                        <div>
                                            <button class="countChangeAction countChangeActionMinus hidden">-</button>
                                            <input type="text" class="item-quantity countChangeAction countChangeActionSet hidden js-product-item-quantity" value="0" data-value="0">
                                            <button class="countChangeAction countChangeActionAdd">+</button>
                                        </div>
                                    </div>
                                </li>
                                #end
                            </ul>
                            #end

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div id="footer" data-role="footer" style="z-index: 100">
        <div class="container-fluid">
            <div class="row">
                <div class="col-xs-3" style=";text-align: center;height: 100%;padding: 0em;">
                    <form action="user/profile" method="get" data-ajax="true">
                        <button type="submit" style="width: 100%;height:100%; margin:0em">我的<span> <br><br></span></button>
                    </form>
                </div>
                <div class="col-xs-9" style="text-align: center;height: 100%;padding: 0em;">
                    <form id="shopConfirm" action="shopCar/confirm" method="post" data-ajax="false">
                        <fieldset>

                            <input type="hidden" id="form_shop_id" name="shop_id" value="$shop.id"/>
                            <input type="hidden" id="form_items" name="items" value=''/>

                            <button id="submit_shop" style="width: 100%;margin:0em">去结算<span> <br>
                            总计: <span id="js-shop-total-price" class="js-shop-total-price">0</span> 元 (<span id="js-shop-total-count"
                                                                               class="js-shop-total-count">0</span> 个商品)</span></button>

                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
</body>
</html>