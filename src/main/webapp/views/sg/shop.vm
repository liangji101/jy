<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1,maximum-scale=1,minimum-scale=1,user-scalable=no" />
    <link rel="stylesheet" href="../js/bootstrap/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="../js/jquery.mobile-1.4.5/jquery.mobile-1.4.5.min.css">
    <link rel="stylesheet" href="../css/app.css">

    <script src="../js/jquery/dist/jquery.min.js" type="text/javascript"></script>
    <script src="../js/jquery.mobile-1.4.5/jquery.mobile-1.4.5.min.js" type="text/javascript"></script>
    <script src="../js/bootstrap/dist/js/bootstrap.min.js" type="text/javascript"></script>

    <!--for tomcat-->
    <link rel="stylesheet" href="/js/bootstrap/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="/js/jquery.mobile-1.4.5/jquery.mobile-1.4.5.min.css">
    <link rel="stylesheet" href="/css/app.css">

    <script src="/js/jquery/dist/jquery.min.js" type="text/javascript"></script>
    <script src="/js/jquery.mobile-1.4.5/jquery.mobile-1.4.5.min.js" type="text/javascript"></script>
    <script src="/js/bootstrap/dist/js/bootstrap.min.js" type="text/javascript"></script>

</head>
<body >


<div data-role="header">
    <a href="#" class="ui-btn-left ui-btn ui-btn-inline ui-mini ui-corner-all ui-btn-icon-left ui-icon-back">Back</a>
    <h1>$shop.name</h1>
        <a href="#" class="ui-btn-right ui-btn ui-btn-inline ui-mini ui-corner-all ui-btn-icon-right ui-icon-gear">Options</a>
</div>

<div class="content">
    <div class="searchBar">
        <input type="search" name="search-products" class="searchBar-input" value="" placeholder="搜索商品...">
    </div>

    <div class="content-container">
        <div class="content-category">

            <div data-role="tabs">
                    <ul data-role="listview" data-inset="true" class="tablist-left">
                       #foreach($category in $categoryls)
                         <li>
                             $category.name
                         </li>
                        #end
                    </ul>
            </div>
        </div>
        <div class="content-details">
            <div id="contentDetail">

                <ul class="tablist-content" data-role="listview" data-inset="true">
                             #foreach($item in  $items)
                    <li>
                        $item.name
                        $item.shop_id
                        $item.pic_url
                        $item.price
                    </li>
                    #end
                </ul>
            </div>
        </div>
    </div>
</div>
</body>
</html>