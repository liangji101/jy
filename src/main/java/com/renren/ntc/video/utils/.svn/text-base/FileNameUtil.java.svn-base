package com.renren.ntc.video.utils;

import java.io.File;

/**
 * 文件名操作工具类
 * @author  Zhancheng Deng
 * @since 2011.9.17 15:28	
 */
public class FileNameUtil {

	public static String getExtension(String fileName){
		int lastIndex =	fileName.lastIndexOf(".");
		String extension = fileName.substring(lastIndex + 1).trim();
		return extension;
		
	}
	public static String generateUniqueName(String uid, String itemCode, String fileName){
		return uid + "_" + itemCode + "." + getExtension(fileName);
	}
	
	public static String getNameFromFilePath(String filePath){
		int lastIndex = filePath.lastIndexOf("/");
		return filePath.substring(lastIndex + 1);
	}
	
	public static File getDirFromFilePath(String filePath){
		int lastIndex = filePath.lastIndexOf("/");
		String dirStr = filePath.substring(0, lastIndex);
		File f = new File(dirStr);
		if(f.isDirectory()){
			return f; 
		}
		return null;
	}
	
	public static String getSavedFileName(String userId, String itemCode, String infoCode, String extension){
		return String.format(Constants.FILE_NAME, userId, itemCode, infoCode, extension);
		
	}
}
